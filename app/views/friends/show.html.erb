<div class="p-3 mb-2 bg-info jumbotron" >
  <h1 class="display-4"><%= @friend.first_name %>
    <%= @friend.last_name %>
  </h1>
  <p class="lead">
    <%= @friend.email %>   |
    <%= @friend.phone %>   |
    <%= @friend.username %>
  </p>
  <hr class="my-4">
  <p class="lead">
    <a class="btn btn-primary btn-lg" href="#" role="button">
      <%= link_to 'Edit', edit_friend_path(@friend),class:"btn btn-dark" %> 
      <%= link_to 'Delete', @friend, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-danger" %>
<%= link_to 'Back', friends_path,class:"btn btn-dark" %>
    </a>
  </p>
</div>







